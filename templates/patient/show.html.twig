{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Ipp</th>
                <td>{{ patient.ipp }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ patient.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ patient.lastname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ patient.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ patient.gender }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ patient.birthDate ? patient.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IaEnabled</th>
                <td>{{ patient.iaEnabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ patient.observation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_patient_index') }}">back to list</a>

    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>

    {{ include('patient/_delete_form.html.twig') }}
{% endblock %}
