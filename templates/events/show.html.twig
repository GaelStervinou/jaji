{% extends 'base.html.twig' %}

{% block title %}Évènement{% endblock %}

{% block body %}
    <a class="mb-5" href="{{ path('app_events_index') }}">Retour à la liste</a>

    <h1>Évènement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ event.value }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_events_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('events/_delete_form.html.twig') }}
{% endblock %}
